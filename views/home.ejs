<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-commerce Home</title>

    <link rel="stylesheet" href="/styles/boxicons.min.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('partials/main/header', { user: user }); %>

    <div class="search-suggestions" id="search-suggestions"></div>

    <section class="hero">
      <div class="heroFlex">
        <div class="hero-text">
          <h1>Welcome to E-COM</h1>
          <p>Your one-stop shop for all your needs</p>
        </div>
        <img
          src="/gifs/Woman Shopping Online.gif"
          style="height: 500px; width: 500px"
          alt=""
          srcset=""
        />
      </div>
    </section>
    <div class="ext"></div>
    <h1
      style="
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 16px;
      "
    >
      Featured Products
    </h1>
    <%- include('partials/productGrid/productGrid', { products }); %>
    <section class="products">
      <h2>Shop by Category</h2>
      <nav
        class="category-nav"
        style="background: var(--nd-bg-color); border-radius: 10px"
      >
        <ul class="category-list">
          <li>
            <a href="/products/category/all">
              <i class="fas fa-box"></i>
              all categories
            </a>
          </li>

          <% categories.forEach(cat => { %>
          <li>
            <a href="/products/category/<%= cat %>">
              <i class="bx bxs-cart"></i>
              <%= cat %>
            </a>
          </li>
          <% }) %>
        </ul>
      </nav>
    </section>

    <section class="products">
      <h2>Special</h2>
      <div
        class="special-grid"
        style="
          background: var(--nd-bg-color);
          padding: 40px;
          border-radius: 10px;
          border: 3px solid var(--main-dark);
        "
      >
        <% special.forEach(e => { %>
        <a
          class="special"
          href="/products/special/<%= e.replace(/\s+/g, '-') %>"
        >
          <p><%= e%></p>
        </a>
        <% }) %>
      </div>
    </section>

    <%- include('partials/main/footer', { user: user }); %>
    <div id="toast-container"></div>

    <script src="/utils/frontFuncs.js"></script>
  </body>
</html>
